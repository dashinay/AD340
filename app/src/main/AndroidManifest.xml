<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dawit.android.ad340">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ZombieLayout"
            android:parentActivityName="com.dawit.android.ad340.Main">
        </activity>
        <activity android:name=".MovieList" android:parentActivityName="com.dawit.android.ad340.Main"/>
        <activity android:name=".FullInfo" android:parentActivityName="com.dawit.android.ad340.MovieList"/>
        <activity android:name=".Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".DisplayMessageActivity"
            android:parentActivityName="com.dawit.android.ad340.Main" />
        <activity android:name=".Info"
            android:parentActivityName="com.dawit.android.ad340.Main"/>
        <activity android:name=".About"
            android:parentActivityName="com.dawit.android.ad340.Main"></activity>
    </application>

</manifest>